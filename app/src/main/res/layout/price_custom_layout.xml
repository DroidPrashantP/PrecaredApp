<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="300dp"
    android:padding="@dimen/padding_normal">
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/sellerTextWrapper"
            android:layout_height="wrap_content"
            android:layout_below="@+id/returnImg"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="left"
            android:text="Listed For"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/text_size_normal"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sellerText"
            android:layout_height="wrap_content"
            android:layout_below="@+id/returnImg"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="left"
            android:padding="@dimen/padding_small"
            android:text="0"
            android:textColor="@color/primary"
            android:textSize="@dimen/text_size_normal"
            android:textStyle="bold" />

    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/sellingTextWrapper"
            android:layout_height="wrap_content"
            android:layout_below="@+id/returnImg"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="left"
            android:text="My Price"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/text_size_normal"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sellingText"
            android:layout_height="wrap_content"
            android:layout_below="@+id/returnImg"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="left"
            android:padding="@dimen/padding_small"
            android:text="0"
            android:textColor="@color/primary"
            android:textSize="@dimen/text_size_normal"
            android:textStyle="bold" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/serviceTxTextWrapper"
            android:layout_height="wrap_content"
            android:layout_below="@+id/returnImg"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="left"
            android:text="Service Tax"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/text_size_normal"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/serviceTaxText"
            android:layout_height="wrap_content"
            android:layout_below="@+id/returnImg"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="left"
            android:padding="@dimen/padding_small"
            android:text="0"
            android:textColor="@color/primary"
            android:textSize="@dimen/text_size_normal"
            android:textStyle="bold" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/refurbishTaxTextWrapper"
            android:layout_height="wrap_content"
            android:layout_below="@+id/returnImg"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="left"
            android:text="Refurbish Cost"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/text_size_normal"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/refurbishCostText"
            android:layout_height="wrap_content"
            android:layout_below="@+id/returnImg"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="left"
            android:padding="@dimen/padding_small"
            android:text="0"
            android:textColor="@color/primary"
            android:textSize="@dimen/text_size_normal"
            android:textStyle="bold" />

    </TableRow>

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:background="@color/primary"
        android:elevation="4dp"
        android:text="Okay"
        android:layout_marginTop="@dimen/margin_normal"
        android:layout_gravity="center"
        android:textColor="@color/text_white"
        android:textSize="@dimen/text_size_large" />


</LinearLayout>