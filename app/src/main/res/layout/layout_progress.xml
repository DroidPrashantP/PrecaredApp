<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/progressBarLL"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="100dp"
    android:minWidth="100dp"
    android:gravity="center"
    android:layout_gravity="center"
    android:orientation="vertical">


    <com.app.precared.utils.AVLoadingIndicatorView
        android:id="@+id/progressBar"
        android:layout_width="@dimen/default_progress_bar"
        app:indicator="BallClipRotateMultiple"
        app:indicator_color="@color/colorAccent"
        android:layout_height="@dimen/default_progress_bar" />

    <TextView
        android:id="@+id/emptyTextView"
        android:gravity="center"
        android:layout_margin="@dimen/margin_large"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>